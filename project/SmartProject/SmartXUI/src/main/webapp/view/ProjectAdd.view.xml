<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:commons="sap.ui.commons"
    controllerName="com.www.smartx.view.ProjectAdd" xmlns:html="http://www.w3.org/1999/xhtml">
    <Page title="{i18n>addProjectPageText}">

        <content>
            <form:SimpleForm maxContainerCols="2">
                <Label labelFor="projectAttr1" text="{i18n>projectAttribute1Title}" />
                <commons:TextField id="projectAttr1" />
                <Label labelFor="projectAttr2" text="{i18n>projectAttribute2Title}" />
                <commons:TextField id="projectAttr2" />
                <Label labelFor="projectAttr3" text="{i18n>projectAttribute3Title}" />
                <commons:TextField id="projectAttr3" />
                <Label labelFor="projectAttr4" text="{i18n>projectAttribute4Title}" />
                <commons:TextField id="projectAttr4" />
                <Label labelFor="projectAttr5" text="{i18n>projectAttribute5Title}" />
                <commons:TextField id="projectAttr5" />
                <Label labelFor="projectAttr6" text="{i18n>projectAttribute6Title}" />
                <commons:TextField id="projectAttr6" />
                <Label labelFor="projectAttr7" text="{i18n>projectAttribute7Title}" />
                <commons:TextField id="projectAttr7" />
                <Label labelFor="projectAttr8" text="{i18n>projectAttribute8Title}" />
                <commons:TextField id="projectAttr8" />
                <Label labelFor="projectAttr9" text="{i18n>projectAttribute9Title}" />
                <commons:TextField id="projectAttr9" />
            </form:SimpleForm>
        </content>

        <footer>
            <Bar>
                <contentRight>
                    <Button text="{i18n>saveProjectButtonText}"
                        icon="sap-icon://add" press="onSaveProject" />
                    <Button text="{i18n>cancelProjectButtonText}"
                        icon="sap-icon://add" press="onCancelAddProject" />
                </contentRight>
            </Bar>
        </footer>

    </Page>
</core:View>